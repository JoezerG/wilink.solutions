---
import RootLayout from "./rootLayout.astro";
import type { MarkdownLayoutProps } from "astro";
import Sidebar from "../components/sidebar.astro";
import PostHeader from "../components/postHeader.astro";
type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
  cover: string;
}>;
const props = Astro.props.frontmatter || Astro.props;
const coverImageUrl = `/images${props.url}/cover_image_scaled.webp`;
---

<style>
  main {
    position: relative;
    z-index: 4;
  }

  .body-post {
    color: white;
    font-family: "Lato", sans-serif;
  }

  .body-post h2 {
    background-color: red;
  }

  .header_image {
    margin-bottom: 5rem;
  }
  .header_image small {
    display: block;
    color: white;
    font-family: "Lato", sans-serif;
    text-align: right;
    margin-top: 0.5rem;
  }

  .header_image > img {
    display: block;
    width: 100%;
    border: 2px var(--primary-color) solid;
    box-sizing: border-box;
  }
</style>

<RootLayout title={props.title}>
  <PostHeader data={props} />
  <main>
    <div>
      <div class="header_image">
        <img
          srcset={coverImageUrl}
          alt={`${props.title}. Imagen generada por Stable Difusion`}
        />
        <small>Imagen generada por Stable Difusion</small>
      </div>
      <div class="body-post">
        <slot />
      </div>
    </div>
    <Sidebar />
  </main>
</RootLayout>
