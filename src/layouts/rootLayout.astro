---
import Navigation from "../components/navigation.astro";
import "@fontsource/lato/700.css";
import "@fontsource/montserrat/400.css";
import "@fontsource/montserrat/700.css";
let { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title && `${title} |`} WiLink Solutions</title>
  </head>

  <body>
    <style lang="scss" is:global>
      :root {
        --max-width-container: 1200px;
        --primary-color: rgb(142, 90, 255);
        --navbar-background: rgba(14, 13, 17, 0.8);
        --body-background: rgb(23, 22, 29);
      }

      body {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        background-color: var(--body-background);
      }

      h1 {
        font-size: 45px;
      }

      h2 {
        font-size: 32px;
      }
      main {
        max-width: var(--max-width-container);
        width: 100%;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 720px 1fr;
        grid-template-rows: 1fr;
        gap: 210px;
      }
      footer {
        margin-top: 4rem;
        background-color: rgba(255, 255, 255, 0.05);
        > div {
          max-width: var(--max-width-container);
          width: 100%;
          margin: 0 auto;
          height: 70px;
          display: flex;
          align-items: center;
          justify-content: space-between;
          font-family: "Montserrat", sans-serif;
          a {
            color: var(--primary-color);
          }
          p {
            color: rgba(255, 255, 255, 0.5);
          }
        }
      }
    </style>
    <Navigation />
    <slot />
    <footer>
      <div>
        <p>Â©2022 WiLink Solutions. Todos los derechos reservados.</p>
        <p>
          made by <a target="_blank" href="https://joezerg.dev">joezerg.dev</a>
        </p>
      </div>
    </footer>
  </body>
</html>
