---
import bgImage from "../images/bg_home_header.png";
---

<style lang="scss">
  header {
    max-width: var(--max-width-container);
    width: 100%;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    grid-template-rows: 1fr;
    height: 600px;

    h1 {
      text-shadow: 1px 1px rgb(203, 179, 255), 2px 2px rgb(52, 9, 109);
      background-color: rgba(15, 1, 32, 0.6);
      padding: 1em 2rem;
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(203, 179, 255, 0.7);
      border-right: 1px solid rgba(203, 179, 255, 0.7);
      border-bottom-right-radius: 10px;
    }

    #home-header-image {
      position: absolute;
      left: 0;
      top: 0;
      z-index: 1;
      width: 100%;
      height: 600px;
      overflow: hidden;
      &::before {
        content: "";
        position: absolute;
        top: 0;
        height: 100%;
        width: 100%;
        background: linear-gradient(
          rgba(23, 22, 29, 0.2),
          rgba(23, 22, 29, 0.5),
          rgba(23, 22, 29, 1)
        );
      }

      > img {
        object-fit: cover;
        object-position: center center;
        max-width: 100%;
      }
    }

    > div {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      z-index: 2;
    }
  }
</style>

<header>
  <div id="home-header-image">
    <img id="header-image" src={bgImage} alt="" />
  </div>
  <div>
    <h1 class="primary">
      Soluciones y tutoriales <br /> de la comunidad <br /> para la comunidad
    </h1>
    <!-- <a class="button outlined" href="#">Conoce mas</a> -->
  </div>
  <div>
    <img src="" alt="" />
  </div>
</header>
