---
import { filterCategories } from "../utils/commons";
import { PostMetada } from "../utils/interfaces";

const posts = await Astro.glob<PostMetada>("../pages/**/*.md");
const categories = posts
  .map((p) => p.frontmatter.tags.split(","))
  .flat()
  .filter(filterCategories);
---

<style>
  aside {
    position: sticky;
  }

  @media (max-width: 1080px) {
    aside {
      display: none;
      visibility: hidden;
    }
  }
  h2 {
    color: white;
    font-family: "Lato", sans-serif;
  }
  div {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 15px;
  }

  a {
    color: var(--primary-color);
    font-family: "Lato", sans-serif;
    border: 2px solid var(--primary-color);
    padding: 0.5rem 1rem;
    cursor: pointer;
    transition: all 0.2s ease;
    background-color: transparent;
    text-decoration: none;
  }

  a:hover {
    color: white;
    background-color: var(--primary-color);
    text-decoration: underline;
  }
</style>

<aside>
  <h2>Categor√≠as</h2>
  <div>
    {
      categories.map((tag) => (
        <a href={`/tag/${tag.toLowerCase()}`} class="button outlined">
          #{tag}
        </a>
      ))
    }
  </div>
</aside>
